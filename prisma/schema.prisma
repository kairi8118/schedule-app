generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------------------------------------------
//  NextAuth (Googleログイン) に必須のテーブル
// ---------------------------------------------

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ---------------------------------------------
//  日程調整アプリ用のテーブル
// ---------------------------------------------

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  // NextAuth用のリレーション
  accounts      Account[]
  sessions      Session[]

  // アプリ用のリレーション
  eventTypes    EventType[]
  bookings      Booking[]
}

model EventType {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  title         String
  slug          String
  length        Int
  description   String?

  bookings      Booking[]
}

model Booking {
  id            String    @id @default(cuid())
  eventTypeId   String
  eventType     EventType @relation(fields: [eventTypeId], references: [id])
  userId        String
  user          User      @relation(fields: [userId], references: [id])

  attendeeEmail String
  attendeeName  String
  startTime     DateTime
  endTime       DateTime

  status        String
  meetingUrl    String?
  createdAt     DateTime  @default(now())
}
